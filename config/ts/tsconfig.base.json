{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["vite/client", "node", "vitest/globals", "react", "react-dom"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "test",
    "config",
    "vite.config.ts",
    "vitest.config.ts",
    "config/**/*.ts",
    "config/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
