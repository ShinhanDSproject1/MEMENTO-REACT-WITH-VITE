{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "ESNext",
    "checkJs": false,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": { "@/*": ["src/*"] },
    "lib": ["ES2020", "DOM"]
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules", "dist"]
}
