{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      "@app/*": ["src/00-app/*"],
      "@pages/*": ["src/01-pages/*"],

      "@widgets": ["src/02-widgets/index.ts"],
      "@widgets/*": ["src/02-widgets/*"],

      "@features": ["src/03-features/index.ts"],
      "@features/*": ["src/03-features/*"],

      "@entities": ["src/04-entities/index.ts"],
      "@entities/*": ["src/04-entities/*"],

      "@shared": ["src/05-shared/index.ts"],
      "@shared/*": ["src/05-shared/*"],

      "@assets/*": ["src/05-shared/assets/*"],

      "@hooks": ["src/05-shared/hooks/index.ts"],
      "@hooks/*": ["src/05-shared/hooks/*"],

      "@lib": ["src/05-shared/lib/index.ts"],
      "@lib/*": ["src/05-shared/lib/*"],

      "@ui": ["src/05-shared/ui/index.ts"],
      "@ui/*": ["src/05-shared/ui/*"],

      "@api": ["src/05-shared/api/index.ts"],
      "@api/*": ["src/05-shared/api/*"]
    },
    "types": ["vite/client", "node", "vitest/globals", "react", "react-dom"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "test",
    "config",
    "vite.config.ts",
    "vitest.config.ts",
    "config/**/*.ts",
    "config/**/*.tsx",
    "eslint.config.ts",
    "prettier.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
