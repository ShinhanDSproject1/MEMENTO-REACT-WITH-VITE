// tsconfig.json (root 단일 버전)
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],

      "@assets/*": ["src/shared/assets/*"],
      "@hooks/*": ["src/shared/hooks/*"],
      "@lib/*": ["src/shared/lib/*"],
      "@ui/*": ["src/shared/ui/*"],
      "@api/*": ["src/shared/api/*"]
    },
    "types": ["vite/client", "node", "vitest/globals", "react", "react-dom"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "test",
    "config",
    "vite.config.ts",
    "vitest.config.ts",
    "config/**/*.ts",
    "config/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
